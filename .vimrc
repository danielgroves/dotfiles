" Syntax highlighting
syntax on

" Line numbers
set number

" Reload file after external modifications automatically
set autoread

" Show current position
set ruler

" Ignore case when searching
set ignorecase

" Try to be case-smart when searching
set smartcase

" Highlight search results
set hlsearch

" Use spaces instead of tabs
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

" Auto indent
set ai

" Smart indent
set so


